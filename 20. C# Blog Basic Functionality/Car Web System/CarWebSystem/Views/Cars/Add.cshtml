@model AddCarFormModel
@{
    ViewData["Title"] = "Add Car";
}

<h2>Add Car</h2>

<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div class="form-group">
                <label aps-for="Make"></label>
                <input class="form-control" asp-for="Make" placeholder="Make">
                <span asp-validation-for="Make" class="form-text text-danger"></span>
            </div>

            <div class="form-group">
                <label aps-for="Model"></label>
                <input class="form-control" asp-for="Model" placeholder="Model">
                <span asp-validation-for="Model" class="form-text text-danger"></span>
            </div>

            <div class="form-group">
                <label aps-for="Year"></label>
                <input type="number" min="1950" max="2018" class="form-control" asp-for="Year" placeholder="Year">
                <span asp-validation-for="Year" class="form-text text-danger"></span>
            </div>

            <div class="form-group">
                <label aps-for="Price"></label>
                <input type="number" min="1" class="form-control" asp-for="Price" placeholder="Price">
                <span asp-validation-for="Price" class="form-text text-danger"></span>
            </div>

            <div class="form-group">
                <label type="url" aps-for="ImageUrl"></label>
                <input class="form-control" asp-for="ImageUrl" placeholder="Image URL">
                <span asp-validation-for="ImageUrl" class="form-text text-danger"></span>
            </div>

            <input type="submit" class="btn btn-primary" value="Save Car" />
        </form>
    </div>
</div>